<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="posts">
    <%= render @posts %>
  </tbody>
</table>
<div id="paginator">
  <%= paginate @posts %>
</div>
<br>

<% if can? :create, Post %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
